                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeArquivo)
                                </td>
                                <td class="text-right align-items-end text-end">
                                    <a data-material-id="@item.Id" class="mx-3 compartilhar-link" style="text-decoration: none; color: inherit;">
