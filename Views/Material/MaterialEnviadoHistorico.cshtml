@model List<Inveni.Models.MaterialEnviadoHistorico>

<div class="row">
    <div class="col-3">
        <div class="d-flex flex-column align-items-center mt-4">
            <a asp-area="" asp-controller="Material" asp-action="Index" class="d-flex align-items-center">
                <img id="voltar-imagem" width="30" height="30"
                     src="https://img.icons8.com/external-solid-adri-ansyah/64/007BFF/external-ui-basic-ui-solid-adri-ansyah-26.png" alt="external-ui-basic-ui-solid-adri-ansyah-26"
                     alt="Voltar" style="cursor: pointer;" />
            </a>
        </div>
    </div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-4">
            <h1>Materiais Enviados</h1>
        </div>
    </div>
    <div class="col-3"></div>
    <div class="col-3"></div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-2 mb-1">
            <p class="d-flex align-items-center" style="font-size: 25px">
                Histórico
            </p>
        </div>
    </div>
    <div class="col-3"></div>
</div>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <table class="table" id="tabela-material">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Aprendiz</th>
                            <th>Material</th>
                            <th>
                                 Data de envio
                           </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td id="tdid" class="align-middle text-center">
                                    <img src="@Url.Content(item.Aprendiz.CaminhoFoto)" alt="User Icon" style="height: 50px; border-radius: 50%;" />
                                </td>
                                <td class="align-middle">
                                    @item.Aprendiz.Nome
                                </td>
                                <td class="align-middle">@item.Material.NomeArquivo</td>
                                <td class="align-middle">
                                    @item.DataEnviado.ToString("dd/MM/yyyy 'às' HH:mm")
                                </td>
                                <td class="align-middle">
                                    <a href="#" class="delete-material" data-material-id="@item.MaterialId" data-toggle="modal">
                                        <img width="20" height="20" src="https://img.icons8.com/ios-filled/50/007BFF/trash.png" alt="filled-trash" />
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

     
    </div>
    <div class="col-2"></div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>

<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tabela-material').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.8/i18n/pt-BR.json'
            }
        });
    });

    document.querySelectorAll('.toggle-group').forEach(button => {
        button.addEventListener('click', () => {
            const groupId = button.getAttribute('data-group-id');
            const detailsRow = document.querySelector(`.group-item-details[data-group-id="${groupId}"]`);
            if (detailsRow) {
                detailsRow.style.display = detailsRow.style.display === 'none' ? '' : 'none';
            }
            button.textContent = button.textContent === 'Mostrar' ? 'Esconder' : 'Mostrar';
        });
    });

    document.getElementById("voltar-imagem").addEventListener("click", function () {
        // Quando a imagem for clicada, redirecionar para a ação "Create"
        window.location.href = "/Material/Index"; // Substitua "ControllerName" pelo nome real do seu controlador
    });

    document.querySelectorAll('.delete-material').forEach(button => {
        button.addEventListener('click', () => {
            const materialId = button.getAttribute('data-material-id');
            // Mostrar SweetAlert para confirmar a exclusão
            Swal.fire({
                title: 'Tem certeza?',
                text: 'Deseja excluir esse registro do histórico?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Excluir',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Se confirmado, enviar a solicitação para excluir
                    fetch(`/Material/DeleteMaterialEnviadoHistorico?id=${materialId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest',
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                // Recarregar a página para atualizar a exibição
                                location.reload();
                            } else {
                                Swal.fire('Erro!', 'Erro ao excluir o registro.', 'error');
                            }
                        })
                        .catch(error => {
                            console.error('Erro ao excluir o registro:', error);
                            Swal.fire('Erro!', 'Erro ao excluir o registro.', 'error');
                        });
                }
            });
        });
    });
</script>
