@model Inveni.Models.MatriculaMestre

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-3">
        <div class="d-flex flex-column align-items-center mt-4">
            <p class="d-flex align-items-center">
                <img id="voltar-imagem"
                     width="30"
                     height="30"
                     src="https://img.icons8.com/external-solid-adri-ansyah/64/007BFF/external-ui-basic-ui-solid-adri-ansyah-26.png" alt="external-ui-basic-ui-solid-adri-ansyah-26"
                     alt="Voltar"
                     style="cursor: pointer;" />
                <a asp-action="Index" class="ms-2 me-2 text-black" style="text-decoration: none; font-size: 20px;"></a>
            </p>
        </div>
    </div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-4">
            <h1>Matriculas</h1>
        </div>
    </div>
    <div class="col-3"></div>
    <div class="col-3"></div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-2 mb-1">
            <p class="d-flex align-items-center" style="font-size: 25px" ;>
                Cadastro
                <img width="30" height="30" class="ms-2" src="https://img.icons8.com/ios-filled/50/007BFF/plus.png" alt="plus" />
            </p>
        </div>
    </div>
    <div class="col-3"></div>
</div>
<div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AprendizId" class="control-label"></label>
                        <select asp-for="AprendizId" class="form-control" asp-items="ViewBag.AprendizId"></select>
                        <input asp-for="MestreId" type="hidden" />
                        <span id="msg"></span>
                    </div>
                    <div class="form-group col-12 mt-3 text-center text-white">
                        <input type="submit" id="botao" value="Cadastrar" class="btn btn-primary text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-3">
    </div>
</div>



<script>
    document.getElementById("voltar-imagem").addEventListener("click", function () {
        // Quando a imagem for clicada, redirecionar para a ação "Create"
        window.location.href = "/MatriculaMestre/Index"; // Substitua "ControllerName" pelo nome real do seu controlador
    });
</script>
