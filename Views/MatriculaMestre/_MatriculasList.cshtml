    function abrirModalExclusao(id, nome, descricao) {
       
        $.ajax({
                url: '@Url.Action("FinalizarMatricula", "MatriculaMestre")',
                type: 'POST',
                data: { id: id },

                success: function (data) {
                
                    // Atualizar a página ou fazer outra ação após finalizar
                    location.reload();

                $('#matriculas-list').html(data);
                $('#matriculasModal').modal('show');
