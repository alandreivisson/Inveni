@model Inveni.Models.TematicaMestre

@{
    ViewData["Title"] = "Edição";
}
<div class="row">
    <div class="col-3">
        <div class="d-flex flex-column align-items-center mt-4">
            <a asp-action="Index" class="d-flex align-items-center">
                <img id="voltar-imagem"
                     width="30"
                     height="30"
                     src="https://img.icons8.com/external-solid-adri-ansyah/64/007BFF/external-ui-basic-ui-solid-adri-ansyah-26.png"
                     alt="plus--v1"
                     style="cursor: pointer;" />
            </a>
        </div>
    </div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-4">
            <h1>Minhas Temáticas</h1>
        </div>
    </div>
    <div class="col-3"></div>
    <div class="col-3"></div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-2 mb-1">
            <p class="d-flex align-items-center" style="font-size: 25px;" ;>
                @ViewData["TematicaDescricao"]
                <img width="25" height="25" class="ms-2" src="https://img.icons8.com/ios-glyphs/30/007BFF/pencil--v1.png" alt="edit--v1" />
            </p>
        </div>
    </div>
    <div class="col-3"></div>
</div>


<div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <form id="editForm" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Biografia" class="control-label">@Html.DisplayNameFor(model => model.Biografia)</label>
                            <textarea asp-for="Biografia" class="form-control mt-2" style="height: 4cm;"></textarea>
                            <span asp-validation-for="Biografia" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="ModeloId" class="control-label">@Html.DisplayNameFor(model => model.ModeloId)</label>
                            <select asp-for="ModeloId" asp-items="ViewBag.ModeloId" class="form-control">
                                <option value="" disabled>Selecione um modelo</option>
                            </select>
                            <span asp-validation-for="ModeloId" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check mt-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Ativo" id="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                            </label>
                        </div>
                        
                        <input type="hidden" asp-for="TematicaId" />
                        <input type="hidden" asp-for="UsuarioId" />
                        
                        <div class="form-group col-12 mt-3 text-center">
                            <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
                        </div>
                    
                </form>
            </div>
        </div>
    </div>
    <div class="col-3"></div>
</div>



<script>
    $(document).ready(function () {
        $("#editForm").submit(function (event) {
            event.preventDefault();

            var formData = $(this).serialize();

            $.ajax({
                type: "POST",
                url: $(this).attr("action"),
                data: formData,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Sucesso!',
                            text: response.message,
                            icon: 'success',
                            timer: 60000,
                            showConfirmButton: false
                        }).then(() => {
                            window.location.href = '/TematicaMestres/Index';
                        });
                    } else {
                        Swal.fire({
                            title: 'Erro!',
                            text: response.message,
                            icon: 'error',
                            timer: 50000,
                            showConfirmButton: false
                        }).then(() => {
                            window.location.href = '/TematicaMestres/Index';
                        });
                    }
                }
            });
        });
    });

    document.getElementById("voltar-imagem").addEventListener("click", function () {
        // Quando a imagem for clicada, redirecionar para a ação "Create"
        window.location.href = "/TematicaMestres/Index"; // Substitua "ControllerName" pelo nome real do seu controlador
    });
</script>
