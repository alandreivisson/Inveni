@model Inveni.ViewModel.AlterarPerfilVM

@{
    ViewData["Title"] = "EditarPerfil";
}

<h1>Usuários</h1>

<h4>Edição</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Nome" class="control-label"></label>
                <input asp-for="@Model.Nome" class="form-control" />
                <span asp-validation-for="@Model.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="@Model.Telefone" class="control-label"></label>
                <input asp-for="@Model.Telefone" class="form-control" />
                <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Biografia" class="control-label"></label>
                <input asp-for="@Model.Biografia" class="form-control" />
                <span asp-validation-for="@Model.Biografia" class="text-danger"></span>
            </div>


            <div class="mt-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancelar</a>
                <button class="btn btn-primary" type="submit">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
