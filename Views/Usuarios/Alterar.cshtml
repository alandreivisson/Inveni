@model Inveni.ViewModel.AlterarPerfilVM

@{
    ViewData["Title"] = "Editar Perfil";
}
<div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-4">
            <h1>Meu Perfil</h1>
        </div>
    </div>
    <div class="col-3"></div>
    <div class="col-3"></div>
    <div class="col-6">
        <div class="d-flex flex-column align-items-center mt-2 mb-1">
            <p class="d-flex align-items-center" style="font-size: 25px;" ;>
                Edição
                <img width="25" height="25" class="ms-2" src="https://img.icons8.com/ios-glyphs/30/edit--v1.png" alt="edit--v1" />
            </p>
        </div>
    </div>
    <div class="col-3"></div>
</div>
<div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Alterar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model.Nome" class="control-label"></label>
                        <input asp-for="@Model.Nome" class="form-control" />
                        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="@Model.Email" class="control-label"></label>
                        <input asp-for="@Model.Email" class="form-control" disabled />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="@Model.Telefone" class="control-label"></label>
                        <input asp-for="@Model.Telefone" class="form-control" />
                        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="@Model.Biografia" class="control-label"></label>
                        <textarea asp-for="@Model.Biografia" class="form-control mt-2" style="height: 4cm;"></textarea>
                        <span asp-validation-for="@Model.Biografia" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-6 mt-3 text-center">
                            <button class="btn btn-primary" type="submit">Salvar</button>
                        </div>
                        <div class="form-group col-6 mt-3 text-center">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-3">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
