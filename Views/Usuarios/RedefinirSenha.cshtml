@model Inveni.ViewModel.RedefinirSenhaViewModel
@{
    ViewBag.Subtitulo = "Redefinição de Senha";
}


<div class="container">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6">
            <div class="card my-5 mx-auto" style="max-width: 50rem;">
                <div class="card-header text-center">
                    <h2 class="mb-0">Redefinição de Senha</h2>
                </div>
                <div class="card-body"> 
                    <form asp-controller="Usuarios" asp-action="RedefinirSenha">
                        <input type="hidden" asp-for="@Model.Token" />

                        <div class="form-group mb-3 col-12">
                            <label asp-for="@Model.Email"></label><br />
                            <input asp-for="@Model.Email" class="form-control" autofocus autocomplete="off" />
                        </div>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>

                        <div class="w-100 mt-3"></div>

                        <div class="form-group mb-3 col-12">
                            <label asp-for="@Model.NovaSenha"></label><br />
                            <input asp-for="@Model.NovaSenha" class="form-control" type="password" autofocus autocomplete="off" />
                        </div>
                        <span asp-validation-for="@Model.NovaSenha" class="text-danger"></span>

                        <div class="form-group mb-3 col-12">
                            <label asp-for="@Model.ConfNovaSenha"></label><br />
                            <input asp-for="@Model.ConfNovaSenha" class="form-control" type="password" autofocus autocomplete="off" />
                        </div>
                        <span asp-validation-for="@Model.ConfNovaSenha" class="text-danger"></span>

                        <div class="mt-3 text-center">
                            <a asp-action="Acesso" asp-controller="Usuarios" class="btn btn-outline-secondary">Cancelar</a>
                            <button class="btn btn-primary" type="submit">Redefinir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>



